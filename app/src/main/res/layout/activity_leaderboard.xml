                android:text="Score"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- Avatar Image -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
